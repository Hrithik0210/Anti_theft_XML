<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-85dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/grad"
            app:shapeAppearance="@style/RoundImageView" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="LogIn"
            android:textColor="@color/white"
            android:textSize="28sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="110dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="SignUp"
            android:textColor="@color/white"
            android:textSize="28sp"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Welcome"
            android:textColor="@color/black"
            android:textSize="42sp"></TextView>

        <TextView
            android:id="@+id/backi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="40sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text"
            android:drawableEnd="@drawable/ic_baseline_email_24"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/black"
            android:textColorHint="#565656" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:drawableEnd="@drawable/ic_baseline_lock_24"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/black"
            android:textColorHint="#565656" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Forgot Password?"
            android:textColor="#016EEE"
            android:textSize="15dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:fontFamily="@font/ubuntu_bold"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="OR"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/google" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/google"
                android:src="@drawable/fb" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Don't have account?"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/msg"
                android:fontFamily="@font/ubuntu_bold"
                android:text="SignUp"
                android:textColor="#016EEE"
                android:textSize="15dp" />
        </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="-35dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-20sp"
            android:src="@drawable/circle1"></ImageView>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="-35dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-40sp"
        android:src="@drawable/circle"></ImageView>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="205dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/circle"></ImageView>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="-147dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-50dp"
        android:src="@drawable/circle1"></ImageView>
</LinearLayout>
    </LinearLayout>


</LinearLayout>